@model List<Category>


@section title {
    <h2>Categories!</h2>
}

@if(Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            @foreach(var category in Model)
            {
                <tr>
                    <td>@category.CategoryName</td>
                    <td>@category.CategoryDescription</td>
                    <td><a asp-controller="categories" asp-action="edit" asp-route-id="@category.CategoryId" >Edit</a></td>
                    <td><a asp-controller="categories" asp-action="delete" asp-route-CategotyId="@category.CategoryId" onclick="return comfirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
    </table> 
    <br/>
        <div>
             <div>
                        <a asp-controller="categories" asp-action="add">Add</a>
             </div>
        </div>
}

@section Scripts{
    <script>
        function comfirmDelete(){
            return confirm("Are you sure you want to delete this category?");
        }
    </script>
}